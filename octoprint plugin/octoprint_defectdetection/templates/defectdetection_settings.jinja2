<form class="form-horizontal">
	<h4>Camera Settings</h4>
	<div class="row-fluid">
				<div class="span2"><h5>{{ _('Width') }}</h5></div>
				<div class="span2"><h5>{{ _('Height') }}</h5></div>
				<div class="span2" style="text-align: center;"></div>
	</div>
	<div class="row-fluid">	
		<div class="row-fluid" style="margin-bottom: 5px">
			<div class="span2"><input type="text" class="input-block-level" data-bind="value: cam_width"/></div>
			<div class="span2"><input type="text" class="input-block-level" data-bind="value: cam_height"/></div>
		</div>
	</div>
	<div class="row-fluid">
				<div class="span2"><h5>{{ _('Model') }}</h5></div>
				<div class="span2"><h5>{{ _('Interval') }}</h5></div>
				<div class="span2" style="text-align: center;"></div>
	</div>
	<div class="row-fluid">	
			<div class="row-fluid" style="margin-bottom: 5px">
			<div class="span4"><select class="input-block-level" data-bind="value: model">
			<option value="Model-1">Model-1</option>
			<option value="Model-2">Model-2</option>
			<option value="Model-3">Model-3</option>
			</select>
			</div>
			
			<div class="span2"><input type="text" class="input-block-level" data-bind="value: interval"/></div>
			</div>
	</div>
	
</form>